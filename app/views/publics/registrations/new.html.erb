<div class="container">
    <div class="row">    
      <h2>新規登録</h2>
    </div>
    
    <div class="row">  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "publics/shared/error_messages", resource: resource %>
    
      <div class="form-group row">
        <%= f.label :名前 %>
        <%= f.label :（姓） %>
        <%= f.text_field :last_name %>
        <%= f.label :（名） %>
        <%= f.text_field :first_name %>
      </div>
    
      <div class="form-group row">
        <%= f.label :フリガナ %>
        <%= f.label :（セイ） %>
        <%= f.text_field :last_name_kana %>
        <%= f.label :（メイ） %>
        <%= f.text_field :first_name_kana %>
      </div>
    
      <div class="form-group row">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="form-group row">
        <%= f.label :郵便番号（ハイフンなし） %>
        <%= f.text_field :postal_code %>
      </div>
    
      <div class="form-group row">
        <%= f.label :住所 %>
        <%= f.text_area :address %>
      </div>
    
      <div class="form-group row">
        <%= f.label :電話番号（ハイフンなし） %>
        <%= f.telephone_field :telephone_number %>
      </div>
    
    
      <div class="form-group row">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="form-group row">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
    <% end %>
    
    
    <h2>すでに登録済みの方</h2>
    <%- if controller_name != 'sessions' %>
      <%= link_to "こちら", new_session_path(resource_name) %>からログインして下さい<br />
    <% end %>
  </div>
</div>
