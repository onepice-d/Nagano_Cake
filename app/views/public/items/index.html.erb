<div class="container">
  <div class="row">
	<div class="col-xs-3">
		<%= render "public/genres/genre", genre: @genres %>
	</div>
      <div class="col-xs-9">


	      <h2 style="margin-left: 15px;">商品一覧
         (全<%= @items.count %>種)</h2>

          <% @items.each do |item| %>
	      <div class="col-lg-4 product-box space">
            <%= link_to public_item_path(item) do %>
          <div class="row">
            <h4><%= item.name %></h4>
          </div>
          <div class="row">
            <%= attachment_image_tag(item, :image, :fill, 220, 180 ) %>
          </div>

         <div class="row">
           <h4><%= item.price %>円</h4>
         </div>
       </div>
	  <% end %>
	    <% end %>

	</div>
  </div>
</div>
