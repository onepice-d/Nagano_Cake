<div class="container">
  <div class="row">
	<div class="col-xs-3">
	</div>

      <div class="col-xs-9">

	    <h1>商品一覧</h1><%= @items.count %>
	    <% @items.each do |item| %>
	      <%= link_to public_item_path(item) do %>
	        <%= attachment_image_tag(item, :image, :fill, 200, 200, fallback: "no-image-mini.jpg") %>
	        <%= item.name %>
	        <%= item.price %>
	        <% end %>
	    <% end %>

	</div>
  </div>
</div>
