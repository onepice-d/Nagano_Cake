<div class="cart_container" style="width:90%; margin: 20px auto; position:relative;">

<strong style="font-size:18px;">
  ショッピングカート
</strong>

<div class="row" style="width:100%; height:20px;"></div>

<div class="text-right title">
        <%= link_to "カートを空にする", public_cart_items_destroy_all_path, method: :delete, class:"btn btn-danger" %>
      </div>

<table class="table table-bordered">
  <tr style="background:#dad7d7; border: 1px solid #fff;">
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
 <% @cart_items.each do |cart_item| %>
  <tr>
    <!--商品画像/商品名-->
            <td><%= attachment_image_tag cart_item.item, :image, format: 'jpeg', size: "80x60" %>　<%= cart_item.item.name %></td>

            <!--税込単価-->
            <td style="vertical-align: middle;"><%= (cart_item.item.price*1.1).floor.to_i.to_s(:delimited) %></td>

            <!--数量-->
            <td class="text-center", style="vertical-align: middle;">
              <!--変更ボタン-->
              <%= form_for(cart_item, url:public_cart_item_path(cart_item)) do |f| %>
              <%= f.number_field :amount, min:1, max: 20 %>　　<%= f.submit "変更" ,class:"btn btn-primary btn-xs" %>
              <% end %>
            </td>

            <!--小計-->
            <td style="vertical-align: middle;"><%= (cart_item.item.price * cart_item.amount*1.1).floor.to_i.to_s(:delimited) %></td>

            <!--削除ボタン-->
            <td>
          <%= link_to "削除する", public_cart_item_path(cart_item), method: :delete, class:"btn btn-danger" %>
        </td>
          <% end %>
</table>

<div class="row">
  <div class="col-xs-4">
    <%= link_to public_items_path do %>
      <span class="btn btn-info glyphicon glyphicon-chevron-left">買い物を続ける</span>
    <% end %>
  </div>
  <div class="col-xs-4 pull-right">
    <table class="table table-striped">
      <tr style="background:#dad7d7; border: 1px solid #fff;"><th>合計金額<td class="total-price"><%= (@total_price*1.1).floor.to_i.to_s(:delimited) %></td></th>
      </tr>
    </table>
  </div>
  <div class="text-center">
        <% if @cart_items.present? %>
          <%= link_to "情報入力に進む", new_public_order_path, class: "btn btn-success", style: "width:20%; padding:10px;" %>
        <% end %>
        </div>

</div>