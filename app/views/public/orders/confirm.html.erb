
<h1>注文情報確認画面</h1>
<thead>
	<tr>商品名</tr>
	<tr>単価(税込)</tr>
	<tr>数量</tr>
	<tr>小計</tr>
</thead>
 <%= form_with(model: @order, url:{ action: 'create' }, local: true) do |f| %>
 <% sum_all = 0 %>
<% @cart_items.each do |cart_item| %>
 <div class="row space-sm">
    <div class="col-lg-3">
      <%= link_to public_item_path(cart_item) do %>
      <%= attachment_image_tag(cart_item.item, :image, :fill, 100, 100) %>
      <% end %>
    </div>
    <div class="col-lg-2">
      <%= link_to public_item_path(cart_item.item) do %>
      <%= cart_item.item.name %>
      <% end %>
    </div>
    <div class="col-lg-2">
      <%= (cart_item.item.price*1.1).floor %>
    </div>
    <div class="col-lg-2">
      <%= cart_item.amount %>
    </div>
    <div class="col-lg-2">
      <%= sum_item = (cart_item.item.price*1.1).to_i * cart_item.amount %>円
      <% sum_all += sum_item %>

    </div>
  </div>
<% end %>

 <div class="row space">
    <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-3">
          <strong>送料</strong>
        </div>

      </div>
      <div class="row">
        <div class="col-lg-3">
          <strong>商品合計</strong>
        </div>
        <div class="col-lg-3">
          <%= sum_all.to_i %>円
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">
          <strong>ご請求額</strong>
        </div>

      </div>
    </div>
  </div>

  <div class="row space-sm">
    <div class="col-lg-2">

支払い方法
    </div>
    <div class="col-lg-4">
    	<%= f.hidden_field :payment_method, :value=>@order.payment_method%>
		<%= @order.payment_method %>
    </div>
  </div>

  <div class="row space-sm">
    <div class="col-lg-2">
      <h3>お届け先</h3>
    </div>
    <div class="col-lg-4">
      <%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.name %>
    </div>
  </div>

  <%= f.hidden_field :customer_id, :value => current_customer.id %>
  <%= f.hidden_field :postal_code, :value =>@order.postal_code %>
  <%= f.hidden_field :address, :value => @order.address%>
  <%= f.hidden_field :address, :value => @order.address %>
</div>



<div class="row space">
  <div class="col-lg-2 offset-lg-5">
<%= f.submit "購入を確定する" %>
</div>
</div>
<% end %>