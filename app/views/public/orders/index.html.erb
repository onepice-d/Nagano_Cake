<div class="container ">
  <h2><i class="fas fa-file-invoice">
  </i>注文履歴一覧</h2>
    <table class="table-bordered">
    <tr>
      <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>

  <% @orders.each do |order| %>
  

     <tr>
        <td><%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= order.postal_code %><br>
          <%= order.address %><br>
            <%= order.customer.last_name %><%= order.customer.first_name %><br>
          </td>
        <td><% order.order_items.each do |order_item| %>
          <%= order_item.item.name %>
        </td>
        <td><%= (order_item.price*order_item.amount) %></td>
        <% end %>
        <td><%= order.status %></td>
        <td><%= link_to "表示する", public_order_path(order) %></td>
      </tr>
    <% end %>
    </table>


    

