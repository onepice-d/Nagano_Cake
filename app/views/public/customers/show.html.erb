<h1>マイページ</h1>

<h4>登録情報</h4>
<%= link_to  edit_public_customer_path, class: 'btn btn-default' do %>
  <i class="fa fa-arrow-left"></i>
  <span>編集する</span>
<% end %>

<%= link_to  edit_customer_registration_path, class: 'btn btn-default' do %>
  <i class="fa fa-arrow-left"></i>
  <span>パスワードを変更する</span>
<% end %>
<br>

<table border="1">
	<tr>
		<th>氏名</th>
		<th><%= @customer.last_name %><%= @customer.first_name %></th>
	</tr>
	<tr>
		<th>カナ</th>
		<th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
	</tr>
	<tr>
		<th>郵便番号</th>
		<th><%= @customer.postal_code %></th>
	</tr>
	<tr>
		<th>住所</th>
		<th><%= @customer.address %></th>
	</tr>
	<tr>
		<th>電話番号</th>
		<th><%= @customer.telephone_number %></th>
	</tr>
	<tr>
		<th>メールアドレス</th>
		<th><%= @customer.email %></th>
	</tr>
</table>

<h4>配送先</h4>
<%= link_to  public_deliveries_path, class: 'btn btn-default' do %>
  <i class="fa fa-arrow-left"></i>
  <span>一覧を見る</span>
<% end %>


<h4>注文履歴</h4>
<%= link_to   public_orders_path, class: 'btn btn-default' do %>
  <i class="fa fa-arrow-left"></i>
  <span>一覧を見る</span>
<% end %>