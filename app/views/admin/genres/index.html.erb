<h2>ジャンル一覧・追加</h2>

<div class="col-xs-3 col-xs-offset-1">

<%= form_for(@genre, url: admin_genres_path) do |f| %>
	<div class="field row">
		<%= f.label :ジャンル %>
		<%= f.text_field :name %>
	</div>
		<%= f.radio_button :is_active, true, checked: true %>
        <%= f.label :name, "有効" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :name, "無効" %>
	<div class="actions">
	<%= f.submit :追加 %>
	</div>
<% end %>

<table>
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th></th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
	<% @genres.each do |genre| %>
		<tr>
			<td><%= genre.name %></td>
			<td>
				<% if genre.is_active == true %>
				有効
				<% else %>
				無効
				<% end %>
			</td>
			<td><%= link_to '編集する', edit_admin_genre_path(genre), class: "edit_#{genre.id}" %></td>
		</tr>
	<% end %>
	</tbody>
</table>
</div>
