<div class="container">
	<div class="row">	
		<h2>注文履歴一覧</h2>
	</div>

	<div class="row">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>購入日時</th>
					<th>購入者</th>
					<th>注文個数</th>
					<th>注文ステータス</th>
				</tr>
			</thead>

			<tbody>
				<% @orders.each do |order| %>
				<tr>
					<td></td>
					<td><%= link_to admin_customer_path(customer) do %>
						<%= order.customer.last_name %>
		              	<%= order.customer.first_name %>
		              	<% end %>
					</td>
					<td></td>
					<td>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>