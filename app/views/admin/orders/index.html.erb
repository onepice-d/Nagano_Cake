
<div class="container takasa">
  <h2>注文履歴一覧</h2><br>
	<table class="table table-hover">
	  <tr class="active">
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文ステータス</th>
      <th></th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td>
      	<%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
      <td><%= order.status %></td>
      <td><%= link_to "注文詳細", admin_order_path(order), class:"btn btn-primary" %></td>
    </tr>
    <% end %>
  </table>

</div>