<h4><strong>商品一覧</strong></h4>
  <table class="table table-bordered" style="margin-top: 20px;">
  	<thead class = "thead-dark">
	  <tr>
	    <th>商品ID</th>
		<th>商品名</th>
		<th>税抜価格</th>
		<th>ジャンル</th>
		<th>ステータス</th>
	  </tr>
    </thead>
	  <tbody>
	  	<% @items.each do |item| %>
	    <tr>
		  <td>
			<%= item.id %>
		  </td>
		  <td>
			<%= item.name %>
		  </td>
		  <td>
			<%= item.price %>
		  </td>
		  <td>
		  	<%= item.genre.name %>
		  </td>
          <td>
          	<% if item.is_active == true %>
          	販売中
          	<% else %>
          	売切中
          	<% end %>
          </td>
      </tr>
	  </tbody>
	<% end %>
  </table>