<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <div class="col-lg-10 space">
        <div class="container">
          <div class="row">
            <h2>商品詳細画面</h2>
          <div class="col-lg-4 offset-lg-2">
              <%= attachment_image_tag(@item, :image, :fill, 360, 300, fallback: "no-image-mini.jpg") %>
          </div>
          <div class="col-lg-4">
            <table>
	          <tr><th><h4>商品名</h4></th><td><%= @item.name %></td></tr>
	          <tr><th><h4>商品説明</h4></th><td><%= @item.introduction %></td></tr>
	          <tr><th><h4>ジャンル</h4></th><td><%= @genre.name %></td></tr>
	          <tr><th><h4>税込価格 (税抜価格)</h4></th><td><%= @item.price %> (<%=@item.price %>)円</td></tr>
              <tr><th><h4>販売ステータス</h4></th>
                <td><% if @item.is_active == true %>
      	              <%= "販売中" %>
    	            <% else %>
    	              <%= "売切中" %>
    	            <% end %>
    	        </td></tr>
            </table>

          <div>
　          <%= link_to "編集する", edit_admin_item_path(@item), class: "btn-sm btn-success edit_book_#{@item.id}"%>
          </div>