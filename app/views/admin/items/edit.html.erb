<h2>商品編集ページ</h2>

  <%= form_for [:admin, @item] do |f| %>

    <%= f.attachment_field :image %>

    <h4>商品名</h4>
      <%= f.text_field :name %>

    <h4>商品説明</h4>
      <%= f.text_area :introduction %>

    <h4>税抜価格</h4>
      <%= f.text_field :price %>

      <h4>ジャンル</h4>
    <%=f.collection_select :genre_id, Genre.all, :id, :name, { prompt: '選択してください' } %>


    <h4>販売ステータス</h4>
      <%= f.select :is_active, [["販売中", "true"], ["売切中","false"]], include_blank: "選択して下さい" %>
     <%= f.submit '変更を保存する' %>

    <% end %>